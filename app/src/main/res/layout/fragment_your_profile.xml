<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alisprojects.goforitonnd.YourProfile"
    android:background="@android:color/holo_orange_dark">

    <!-- TODO: Update blank fragment layout -->


    <ProgressBar
        android:id="@+id/LevelBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/userLevel"
        android:layout_alignParentStart="true" />

    <TextView
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/userLevel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Level: "
        android:layout_below="@+id/dayFormText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp" />

    <TextView
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/userExp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="27dp"
        android:text="Experience"
        android:layout_below="@+id/dayFormText"
        android:layout_alignEnd="@+id/LevelBar" />

    <ListView
        android:textColor="#000000"
        android:id="@+id/listOfTasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:gravity="center"
        android:size="40dp"
        android:textColor="#FFFFFF"
        android:id="@+id/dayFormText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Your Form" />

    <TextView
        android:gravity="center"
        android:id="@+id/todaytasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LevelBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Your Today tasks" />

</RelativeLayout>
