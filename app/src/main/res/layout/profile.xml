<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goforit">

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/emailTextView" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20dp"
        android:height="30dp"
        android:textColor="#FF8C00"
        android:background="#000000"
        android:text="Welcome to the League of Draven"
        android:layout_marginBottom="87dp"
        android:layout_above="@+id/FullNameEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/GoInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO IN!"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/FullNameEditText" />

    <EditText
        android:id="@+id/FullNameEditText"
        android:hint="Your Full Name"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/logoutButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="117dp"
        android:layout_alignEnd="@+id/emailTextView" />
</RelativeLayout>